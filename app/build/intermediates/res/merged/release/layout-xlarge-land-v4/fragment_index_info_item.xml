<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnIndexInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/price_table_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txtIndexInfoDisplay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_index_info_detail_10in_land" />

        <TextView
            android:id="@+id/txtIndexInfoVolume"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_index_info_detail_10in_land" />

        <TextView
            android:id="@+id/txtIndexInfoPclose"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_index_info_detail_10in_land" />

        <TextView
            android:id="@+id/txtIndexInfoUpdownPercent"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_index_info_detail_10in_land" />
    </LinearLayout>

