<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.xstock.rippleview.RippleView
            android:id="@+id/rvX24BasicTradeImageBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_keyboard_backspace_black_36dp"
            android:gravity="center"
            app:alphaFactor="0.7"
            app:hover="true"
            app:mrippleColor="@color/pressed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_X24_basic_trade_image"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/black"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@color/white">

            <com.dpizarro.autolabel.library.AutoLabelUI
                android:id="@+id/lbvTradeImageSearchData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:icon_cross="@drawable/cross"
                app:label_background_res="@color/autolabel_bg"
                app:label_clickable="true"
                app:show_cross="true"
                app:text_color="@color/white"
                app:text_size="@dimen/label_title_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:gravity="right">

            <ImageButton
                android:id="@+id/imbX24BasicTradeImageSearch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_search_black"
                android:backgroundTint="@color/black" />
        </LinearLayout>

        <com.xstock.rippleview.RippleView
            android:id="@+id/rvX24BasicTradeImageSearch"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_margin="1dp"
            android:background="@color/btn_x24_plus_search"
            android:gravity="center"
            android:text="@string/btn_X24_basic_search"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:alphaFactor="0.7"
            app:hover="true"
            app:mrippleColor="@color/pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black"
            android:orientation="horizontal">

            <com.xstock.rippleview.RippleView
                android:id="@+id/rvX24BasicTradeImageDay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/btTradeImageDayHour"
                android:gravity="center"
                android:text="@string/txt_X24_basic_trade_day"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:alphaFactor="0.7"
                app:hover="true"
                app:mrippleColor="@color/pressed" />

            <com.xstock.rippleview.RippleView
                android:id="@+id/rvX24BasicTradeImageHour"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/txt_X24_basic_trade_hour"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:alphaFactor="0.7"
                app:hover="true"
                app:mrippleColor="@color/pressed" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvX24BasicTradeImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:scrollbars="horizontal"></ImageView>

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avTradeImageLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:indicator="BallSpinFadeLoader"
                app:indicator_color="@android:color/black" />

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
